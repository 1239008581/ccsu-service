<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hang.dao.ApplyDAO">

    <insert id="insert">
        insert ignore activity_apply(information_id, open_id, status)
        values(#{informationId}, #{openId}, #{status})
    </insert>

    <update id="update">
        update activity_apply
        set
          status = #{status}
        where
          apply_id = #{applyId}
    </update>

    <select id="listAppliesByInformationId" resultType="com.hang.pojo.data.InformationApplyDO">
      select * from activity_apply where information_id = #{informationId}
    </select>

    <select id="selectById" resultType="com.hang.pojo.data.InformationApplyDO">
      select * from activity_apply where apply_id = #{applyId}
    </select>
    <select id="selectByOpenId" resultType="com.hang.pojo.data.InformationApplyDO">
        select * from activity_apply where open_id = #{openId}
    </select>


</mapper>