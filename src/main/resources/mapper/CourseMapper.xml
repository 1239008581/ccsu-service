<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hang.dao.CourseDAO">

    <select id="selectAllCourseByJwcAccount" resultType="com.hang.pojo.data.CourseDO">
        select * from course where jwc_account = #{jwcAccount}
    </select>

    <select id="selectAllCourseByJwcAccountAndSemester" resultType="com.hang.pojo.data.CourseDO">
        select * from course where jwc_account = #{jwcAccount} and xnxqh = #{semester}
    </select>

    <select id="selectClassroomNow" resultType="java.lang.String">
        select distinct(location) from course where section=#{section} and weekday = #{weekDay} and xnxqh = #{semester} and locate("-"+#{week}+"-",week_seq) > 0;
    </select>

    <select id="selectAllClassroom" resultType="java.lang.String">
        select distinct(location) from course;
    </select>

</mapper>